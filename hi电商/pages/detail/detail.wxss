@import "/css/iconfont.wxss";

page {
    display: flex;
    flex-direction: column;
    height: 100%;
}

swiper {
    height: 600rpx;
    background: #f3f4f6;
    text-align: center;
}

swiper-item image {
    width: 80%;
    height: 100%;
}

/* 图文详情 */

.tab-bar-detail {
    width: 75rpx;
    height: 75rpx;
    line-height: 25rpx;
    background-color: #fff;
    border-radius: 25px;
    position: fixed;
    z-index: 2;
    right: 4%;
    top: 500rpx;
    border: 1rpx solid #f3f4f6;
    display: flex;
    flex-direction: column;
    flex-wrap: wrap;
    justify-content: center;
    font-size: 22rpx;
    color: #e80080;
    text-align: center;
}

/* 商品价格 */

.product-price-wrap {
    display: flex;
    flex-direction: row;
    flex-wrap: wrap;
    justify-content: space-between;
    margin: 5px;
 
}

.product-price-wrap .product-price-new {
    color: #e80080;
    font-weight: 400;
    font-size: 24px;
}

.product-price-wrap .product-price-old {
    color: #888;
    text-decoration: line-through;
    font-size: 14px;
    font-weight: 400;
    line-height: 30px;
    padding-left: 5px;
}

.product-price-wrap .discount {
    margin: 5px;
    background-color: #000;
    color: #fff;
    height: 18px;
    font-size: 14px;
    border-radius: 2px;
}

.product-price-wrap i {
    display: inline-block;
    font-size: 18px;
    margin: 0px 10px;
    margin-top: 6px;
}

/* 产品标题 */
.productt-name-wrap {
    margin-top: 20px;
}
.productt-name-wrap text {
  
    font-size: 14px;
    font-weight: 400;
    line-height: 0.48rem;
    color: #404040;
    overflow: hidden;

}

/* 详情也的详情图片 */
.details {
    padding: 0px 5px;
    text-align: center;
    display: flex;
    flex-direction: column;
    margin-top: 15rpx;
    margin-bottom: 0rpx;
}
